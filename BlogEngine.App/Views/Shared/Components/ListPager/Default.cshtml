@model PaginatedList<Post>

@if (Model != null && Model.Count() > 0)
{
    for (int i = 0; i < Model.Count(); i++)
    {
        <article class="blog-post">
            <h2 class="blog-post-title">@Model[i].Title</h2>
            <p class="blog-post-meta">
                @Model[i].CreateDate.ToShortDateString()
                @Model[i].Author
            </p>
            <p>@Model[i].Description</p>
            @Html.ActionLink("Ver publicación..", "Index", "Post", new {IdPost = @Model[i].Id}, new { @class = ""})
            <hr>
        </article>
    }
    <span>Pagina </span>
    <span id="currentIndex">@Model.PageIndex</span>
    <span> de: </span>
    <span id="totalPages">@Model.TotalPages</span>
}